package thor.model.geoset;

import java.util.ArrayList;
import java.util.List;

public class Skeleton {

	VoxelMesh _mesh;

	public Skeleton(VoxelMesh mesh)
	{
		_mesh = mesh;
	}
	
	public List<Node> genBasicGraph()
	{
		List<Voxel> voxels = _mesh._thinnedVolume;
		List<Node> basicGraph = new ArrayList<Node>();
		
		List<Node> allNodes = new ArrayList<Node>();
		
		for(int i = 0; i < voxels.size(); i++)
		{
			Voxel v = voxels.get(i);
			allNodes.add(new Node(v._position, new ArrayList<Node>()));
		}
		
		for(int i = 0; i < voxels.size(); i++)
		{
			Node n = allNodes.get(i);
			
			List<Node> neighbors = n.getNeighbors();
			neighbors.addAll(allNodes);
		}
		
		return basicGraph;
	}
	
	public List<Node> genMinimumSpawningTree()
	{
		List<Voxel> voxels = _mesh._thinnedVolume;
		List<Node> minimumSpawningTree = new ArrayList<Node>();
		return minimumSpawningTree;
	}
}
